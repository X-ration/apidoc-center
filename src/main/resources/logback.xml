<configuration>

    <!--指定日志根目录位于tomcat CATALINA_BASE 根目录下logs/spring-mvc-->
    <substitutionProperty name="log.base" value="logs" />

    <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter" />
<!--    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>-->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%clr(%d{yyyy-MM-dd HH:mm:ss.SSS}){faint} %clr([%thread]) %clr(%-5level){magenta} %clr(%logger{72}){cyan} - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="ROLLING_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy"> 　　　　　　　　　　　　　　
            <fileNamePattern>${log.base}/logFile.%d{yyyy-MM-dd}.log</fileNamePattern> 　　　　　　　　　　　　　　
            <maxHistory>30</maxHistory> 　　　　　　　　　　　　
        </rollingPolicy> 　
        <!--日志文件最大的大小-->
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>10MB</MaxFileSize>
        </triggeringPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{72} - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="ROLLING_FILE_LUCENE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy"> 　　　　　　　　　　　　　　
            <fileNamePattern>${log.base}/lucene.%d{yyyy-MM-dd}.log</fileNamePattern> 　　　　　　　　　　　　　　
            <maxHistory>30</maxHistory> 　　　　　　　　　　　　
        </rollingPolicy> 　
        <!--日志文件最大的大小-->
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>10MB</MaxFileSize>
        </triggeringPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{72} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.adam.apidoc_center" level="debug"/>
    <logger name="org.springframework.orm.jpa" level="debug"/>
    <logger name="com.adam.apidoc_center.service.LuceneService" level="debug" additivity="false">
        <appender-ref ref="ROLLING_FILE_LUCENE"/>
    </logger>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ROLLING_FILE"/>
    </root>
</configuration>